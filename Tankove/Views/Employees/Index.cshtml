@model IEnumerable<Tankove.Models.Employees>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Employees</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary">
                Add Employee
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table id="table-employees"  class="table table-bordered table-striped" style:"width125%">
            <thead>
                <tr>
                    <th>
                        Firt Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Months Experience
                    </th>
                    <th>
                        Position
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="25%">@obj.FirstName</td>
                    <td width="25%">@obj.LastName</td>
                    <td width="25%">@obj.Experience</td>
                    <td width="25%">@obj.Position</td>
                    <td class="text-center">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Employees" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p>No Employees exist.</p>
    }

</div>